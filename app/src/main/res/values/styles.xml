<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="AppMainMenuTheme" parent="@android:style/Theme.WithActionBar">
        <item name="android:actionBarTabBarStyle">@style/menu_actionbar_style</item>
        <item name="android:actionBarDivider">@android:drawable/divider_horizontal_dark</item>
    </style>

    <style name="menu_actionbar_style" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">@color/gay</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DatePickerTheme" parent="android:Theme.Holo.Light.NoActionBar"></style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textColor">#000</item>
    </style>

    <style name="RCTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RCContentStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style parent="android:Theme.Dialog" name="ApDialog">
        <item name="android:windowFrame">@null</item>
        <!-- //对话框无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- //此对话框的背景 -->
        <!-- 设置背景迁安透明 @color/transparent -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- //对话框是否浮动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- //对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="navigation_sep_horizontal_color_bc7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/base_color_BC7</item>
    </style>

    <style name="navigation_sep_vertical_color_bc7">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_color_BC7</item>
    </style>

</resources>
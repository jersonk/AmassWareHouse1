<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linOpr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="3dip"
            android:text="@string/PP015_PACK_OPR"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOpr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="3dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linMailContext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linOpr"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:padding="3dip"
            android:text="@string/PP015_PACK_MAIL"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNoBoxName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="3dip"
            android:text="@string/jxno" />

        <TextView
            android:id="@+id/tvNoBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scNoBoxContext"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/linMailContext"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tvNoBoxContext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="3dip" />
    </ScrollView>

    <TextView
        android:id="@+id/tvRemark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scNoBoxContext"
        android:layout_marginLeft="5dp"
        android:padding="3dip"
        android:text="@string/PP012_REMARK"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvConext"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linSend"
        android:layout_below="@+id/tvRemark"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="left|top"
        android:imeOptions="actionDone"
        android:maxEms="500"
        android:padding="3dip" />

    <LinearLayout
        android:id="@+id/linSend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/default_button_style"
            android:gravity="center_vertical"
            android:text="@string/PP015_PACK_SEND"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
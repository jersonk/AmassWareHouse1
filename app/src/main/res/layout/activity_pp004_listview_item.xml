<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/jc_no"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_jc_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/dp_status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dp_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />
    </TableRow>

    <!-- 第二行 -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/ss_count"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />
        
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/zx_requirement"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zx_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left"
            android:textStyle="bold" />

      
    </TableRow>

    <!-- 第三行 -->

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/js_comment"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/js_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            style="@style/TextStyleNormal"
            android:layout_weight="3"
            android:gravity="left" />

    </TableRow>
    
    <!-- 第4行 -->
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <!-- 隐藏订单号 -->
        <TextView
            android:id="@+id/order_cd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />

    </TableRow>
    


</TableLayout>
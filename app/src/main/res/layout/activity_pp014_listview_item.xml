<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP005_order_cd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderCd_public_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP014_unPacking_flg"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unPacking_flg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />
    </TableRow>

    <!-- 第二行 -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP014_pileCard_cd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pileCardCd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />
        
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP005_paidin_num"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidinNum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="left" />
    </TableRow>

    <!-- 第三行 -->

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP014_unPacking_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unPacking_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            style="@style/TextStyleNormal"
            android:layout_weight="3"
            android:gravity="left" />     
    </TableRow>
    
    <!-- 第四行 -->

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            style="@style/TextStyleNormal"
            android:gravity="center"
            android:text="@string/PP005_num_remark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            style="@style/TextStyleNormal"
            android:layout_weight="3"
            android:gravity="left" />

    </TableRow>
    

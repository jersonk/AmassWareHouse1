<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#00B2EE" />
            <stroke android:width="1dp" android:color="#dcdcdc" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
            <stroke android:width="1dp" android:color="#dcdcdc" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <item><shape>
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#CCCCCC" />
            <stroke android:width="1dp" android:color="#C4C4C4" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
</selector>
